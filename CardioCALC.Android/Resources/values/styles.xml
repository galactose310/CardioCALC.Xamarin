<?xml version="1.0" encoding="iso-8859-1"?>
<resources>
  <style parent="MainTheme.Base" name="MainTheme"> </style>
  <!-- Base theme applied no matter what API -->
  <style parent="Theme.AppCompat.Light" name="MainTheme.Base">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#00bcd4</item> <!-- Tabbar text/icons color => Original : #2196F3 -->
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#f8f8fa</item> <!-- Original : #1976D2 -->
    <!-- colorAccent is used as the default value for colorControlActivated which is used to tint widgets -->
    <item name="colorAccent">#00bcd4</item>
    <!-- You can also set colorControlNormal, colorControlActivated colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>
  
  <style parent="Theme.AppCompat.Light.Dialog" name="AppCompatDialogStyle">
    <item name="colorAccent">#0000ff</item>
  </style>
</resources>
